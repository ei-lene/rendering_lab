<%= form_for(@race) do |f| %>
  <fieldset>
    <legend>Race</legend>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
  </fieldset>

  <fieldset>
    <legend>Horse</legend>

    <%= f.fields_for :horses do |h| %>
 
      <%= render :partial => "horses/fields", :locals => { :f => h} %>

    <% end %>
  </fieldset>

  <fieldset>
    <legend>Jockey</legend>
    <%= f.fields_for :jockeys do |j| %>

    <%= render :partial => "jockeys/fields", :locals => { :f => j } %>

    <% end %>
  </fieldset>

  <p>
    <div class="actions">
      <%= f.submit %>
    </div>
  </p>
<% end %>