<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <br>
  <%= @race.name %>
</p>

<p>
  <b>Description:</b>
  <br>
  <%= @race.description %>
</p>

<p>
  <b>Horses:</b>
  <ul>
    <% @race.horses.each do |horse| %>
      <li>
        <p>Position: <%= horse.position %></p>
        <p>Name: <%= horse.name %></p>
        <p>Number: <%= horse.number %></p>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <b>Jockeys:</b>
  <ul>
    <% @race.jockeys.each do |jockey| %>
      <li>
        <p>Name: <%= jockey.name %></p>
        <p>height: <%= jockey.height %></p>
        <p><%= jockey.shoe_size %></p>
      </li>
    <% end %>
  </ul>
</p>